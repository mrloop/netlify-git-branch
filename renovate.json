{
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "stabilityDays": 3
    },
    {
      "matchPackageNames": ["netlify-cli"],
      "schedule": ["after 8am on friday"]
    }
  ]
}
